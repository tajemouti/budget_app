<div>
  <%= form_with model: @category do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :icon %>
      <%= form.text_field :icon, placeholder: "Icon link" %>
    </div>
    <%= form.submit %>
  <% end %>
  <%= link_to "Back", categories_path %>
</div>