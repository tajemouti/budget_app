<h1>Transactions</h1>

<div>
  <h2><%= @category.name %></h2>
  <p>Total amount: $<%= @sum %></p>
</div>

<div>
  <% @payments.each do |payment| %>
   <div>
      <%= payment.name %>
      <p>Amount: $<%= payment.amount %></p>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Add new transaction", new_category_payment_path(@category) %>
  <%= link_to "Back", categories_path %>
</div>
